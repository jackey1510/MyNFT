{
  "env": {
    "browser": false,
    "es2021": true,
    "mocha": true,
    "node": true
  },
  "plugins": ["@typescript-eslint"],
  "extends": [
    "standard",
    "plugin:prettier/recommended",
    "plugin:node/recommended"
  ],
  "parser": "@typescript-eslint/parser",
  "parserOptions": {
    "ecmaVersion": 12
  },
  "rules": {
    "node/no-unsupported-features/es-syntax": [
      "warn",
      {
        "ignores": ["modules"],
        "version": ">=14.0.0"
      }
    ],
    "no-unused-expressions": ["warn"],
    "node/no-missing-import": ["warn"]
  }
}
